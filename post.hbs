{{!< default}}
{{> header}}
<main class="main_auto" role="main">
{{#post}}
<article class="article_auto" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_auto">
<time class="date_auto" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
<h1 class="posttitle_auto" itemprop="headline">{{title}}</h1>
</header>
<div class="postcontent_auto" itemprop="articleBody">
{{content}}
</div>
{{#if tags}}
<div class="posttags_auto">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
    <div class="sharepost_auto">
    <h4 class="share_auto">Share this post: &nbsp;</h4>
    <a class="share_auto icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_auto">Twitter</span></a>
    <a class="share_auto icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_auto">Facebook</span></a>
    <a class="share_auto icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_auto">Google+</span></a>
    </div>
        {{#if author}}
        <footer class="postfooter_auto">
        <address itemscope itemtype="http://schema.org/Person">
        {{#if author.image}}
        <div class="authorimage_auto"><img src="{{author.image}}" itemprop="image" /></div>
        {{/if}}
        <h4 class="authorname_auto"><span itemprop="author">{{author.name}}</span></h4>
        {{#if author.website}}
        <div class="authorwebsite_auto"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
        </address>
        <div class="authorbio_auto">
        <p>{{author.bio}}</p>
        </div>
        </footer>
        {{/if}}
</article>
{{/post}}
{{#if pagination}}
<div class="pagination_auto">
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}