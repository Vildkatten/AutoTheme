{{!< default}}
{{! The big featured header on the homepage, with the site logo and description }}
<header class="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div class="site-head-content" class="inner">

            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>
<main class="main_auto" role="main">
{{#foreach posts}}
<article class="article_auto" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_auto">
<time class="date_auto" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
<h1 class="posttitle_auto" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
</header>
<div class="postcontent_auto" itemprop="articleBody">
{{content}}
</div>
{{#if tags}}
<div class="posttags_auto">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
</article>
{{/foreach}}
{{#if pagination}}
<div class="pagination_auto">
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}